<mvc:View
	controllerName="sap.dm.controller.Sitemap"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		title="Site Map"
		navButtonPress="handleNavBack"
		showNavButton="{device>/isPhone}"
		showFooter="{device>/isNoPhone}">
		<headerContent>
		</headerContent>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
		<content>
			<Panel>
				<SegmentedButton
					selectedKey="7"
					select="onSegmentSelected">
					<items>
						<SegmentedButtonItem
							text="7th Floor"
							key="7" />
						<SegmentedButtonItem
							text="8th Floor"
							key="8" />
					</items>
				</SegmentedButton>
				<Panel class="siteMapPanel">
					<Image
						class="sitePic"
						visible="true"
						id="id7F"
						densityAware="false"
						src="img/7TH.png"></Image>
					<Image
						class="sitePic"
						visible="false"
						id="id8F"
						densityAware="false"
						src="img/8TH.png"></Image>
				</Panel>
			</Panel>
		</content>
	</Page>
</mvc:View>